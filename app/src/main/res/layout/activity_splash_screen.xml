<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:context=".SplashScreen" android:background="#63511A">


    <ImageView
            android:id="@+id/ini_splash"
            android:src="@drawable/splash"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="#7A6830"
            android:layout_centerInParent="true"

    />
    <TextView
            android:id="@+id/tv_splash"
            android:text="Vira Tech"
            android:layout_below="@id/ini_splash"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textColor="#D8C83A"/>
    textColor


</RelativeLayout>